{
    "resource": [
        {
            "local_server": [
                {
                    "env3": [
                        {
                            "provisioner": [
                                {
                                    "local-exec": {
                                        "command": "echo 'Arrancando servidor ${var.name} en puerto ${var.port} en red ${var.network}'"
                                    }
                                }
                            ],
                            "triggers": {
                                "name": "${var.name}",
                                "network": "${var.network}",
                                "port": "${var.port}"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}